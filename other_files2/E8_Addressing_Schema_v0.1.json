{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:schemas:e8-addressing:v0.1",
  "title": "E8 Addressing Schema (E8-AS) v0.1",
  "type": "object",
  "required": [
    "coords",
    "root_loc",
    "axes",
    "version"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "0.1",
      "description": "Schema version for E8-AS"
    },
    "coords": {
      "type": "array",
      "minItems": 8,
      "maxItems": 8,
      "items": {
        "type": "number"
      },
      "description": "Normalized R^8 coordinates (unit-length preferred)."
    },
    "root_loc": {
      "type": "object",
      "required": [
        "nearest_roots",
        "reflections",
        "adjacency_rule"
      ],
      "properties": {
        "nearest_roots": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "index",
              "inner_product"
            ],
            "properties": {
              "index": {
                "type": "integer",
                "minimum": 0,
                "maximum": 239
              },
              "inner_product": {
                "type": "number"
              }
            }
          },
          "description": "Nearest E8 root(s) by index and similarity."
        },
        "reflections": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "description": "Optional sequence of root indices defining a Weyl reflection path from a reference frame."
        },
        "adjacency_rule": {
          "type": "string",
          "enum": [
            "inner_product_eq_1",
            "knn_fallback"
          ],
          "description": "How neighbor edges are defined."
        }
      }
    },
    "axes": {
      "type": "object",
      "properties": {
        "tenant": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "policy_id": {
          "type": "string"
        },
        "solver_id": {
          "type": "string"
        },
        "persona_id": {
          "type": "string"
        },
        "data_slice": {
          "type": "string"
        },
        "version_container": {
          "type": "string",
          "description": "e.g., v14"
        },
        "timestamp_bucket": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}(|T\\d{2})$"
        },
        "trust": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "additionalProperties": {
        "type": "string"
      },
      "description": "Axis registry fields. Additional axis dims permitted but must be strings."
    },
    "bridge_node": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Named pivot points for policy/behavior changes."
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}