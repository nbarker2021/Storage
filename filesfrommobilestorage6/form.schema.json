{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CQE Form",
  "type": "object",
  "required": [
    "form_id",
    "title",
    "status",
    "cap",
    "scope",
    "viewers"
  ],
  "properties": {
    "form_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "PAUSED",
        "STANDBY"
      ]
    },
    "cap": {
      "type": "object",
      "required": [
        "fourbit",
        "name",
        "code"
      ],
      "properties": {
        "fourbit": {
          "type": "string",
          "pattern": "^[01]{4}$"
        },
        "name": {
          "type": "string"
        },
        "code": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15
        }
      }
    },
    "scope": {
      "type": "string",
      "enum": [
        "local",
        "context"
      ]
    },
    "viewers": {
      "type": "object",
      "required": [
        "local",
        "surroundings",
        "parity",
        "mirror"
      ],
      "properties": {
        "local": {
          "type": "string"
        },
        "surroundings": {
          "type": "string"
        },
        "parity": {
          "type": "string"
        },
        "mirror": {
          "type": "boolean"
        }
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}